<div class="signatures__wrapper">
  {% for block in section.blocks %}
    <div class="signature__item">
      <img class="signature-item__image"
        src="{{ block.settings.image | img_url: 'x110' }}"
        alt="{{ block.settings.name }}" />
      <h6 class="signature-item__name">{{ block.settings.name }}</h6>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Signatures Section",
  "class": "signatures",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "signatures",
      "name": "Signatures Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        }
      ]
    }
  ]
}
{% endschema %}
