<div class="best-sellers" style="background-color: {{ section.settings.color_bg }};">
  <header class="layout-section__header">
    <h2 class="layout-section__title">{{ section.settings.title }}</h2>
  </header>
  <div class="best-sellers__content">
    {% assign collection = collections['all-products-noindex'] %}
    <ul class="product-grid">
      {% for product in collection.products %}
        {% unless forloop.index > section.settings.max %}
          <li class="product-grid__item">
            <a class="product-grid__item-link"
              href="{{ product.url }}">
              <img class="product-grid__item-image product-grid__item-image--primary"
                src="{{ product.featured_image | img_url: '230x230', crop: 'center' }}"
                alt="{{ product.title }}" />
              <img class="product-grid__item-image product-grid__item-image--secondary"
                src="{{ product.images[1] | img_url: '230x230', crop: 'center' }}"
                alt="{{ product.title }} alternative" />
              <h3 class="product-grid__item-title">{{ product.title | split: ' -' | first }}</h3>
              {% comment %} <span class="product-grid__item-variant">{{ product.variant }}</span> {% endcomment %}
              <span class="product-grid__item-price">{{ product.price | money_without_trailing_zeros }}</span>
            </a>
          </li>
        {% endunless %}
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Best Sellers",
  "class": "layout-section section--best-sellers",
  "settings": [
    {
      "type": "color",
      "id": "color_bg",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "max",
      "min": 4,
      "max": 40,
      "step": 1,
      "unit": "pdt",
      "label": "Max products count",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Best Sellers",
      "category": "Layout"
    }
  ]
}
{% endschema %}
